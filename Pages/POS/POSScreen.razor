@page "/pos"
@using EyeHospitalPOS.Controllers
@using EyeHospitalPOS.Models
@using EyeHospitalPOS.Helper
@inject POSController POSController
@inject LoginManager LoginManager
@inject NavigationManager Navigation

<PageTitle>Point of Sale - EyeCare POS</PageTitle>

@if (LoginManager.CurrentUser == null)
{
    <div class="alert alert-warning m-4">Please login to access POS.</div>
}
else
{
    <div class="page-container p-4 h-100 overflow-hidden d-flex flex-column">
        <!-- Unified Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-shrink-0">
             <div>
                <h3 class="mb-1 fw-bold">Point of Sale</h3>
                <p class="text-muted tiny mb-0">Create new sales and generate invoices</p>
             </div>
             <div class="d-flex gap-3">
                 <div class="bg-white px-4 py-2 rounded-3 border fw-bold text-primary shadow-sm">
                     <i class="fa-solid fa-calendar-day me-2"></i> @DateTime.Now.ToString("dd MMM yyyy")
                 </div>
             </div>
        </div>

        <div class="row g-4 flex-grow-1 overflow-hidden">
            <!-- Left: Product Search and Cart Area -->
            <div class="col-lg-8 d-flex flex-column h-100 overflow-hidden">
                <div class="premium-card d-flex flex-column h-100 overflow-hidden">
                    <!-- Search Header -->
                    <div class="p-4 border-bottom bg-white flex-shrink-0">
                        <div class="search-section position-relative">
                             <div class="search-icon-pos">
                                 <i class="fa-solid fa-magnifying-glass text-muted"></i>
                             </div>
                             <input type="text" class="form-control form-control-lg ps-5 border-2 shadow-none" 
                                    @bind-value="searchTerm" 
                                    @bind-value:event="oninput"
                                    @onkeyup="SearchProducts"
                                    placeholder="Scan barcode or type product name..." 
                                    style="border-radius: 12px;" />
                             
                             @if (searchResults.Any())
                             {
                                 <div class="search-results-overlay premium-card shadow-lg">
                                     @foreach (var product in searchResults)
                                     {
                                         <div class="search-result-item d-flex justify-content-between align-items-center p-3 border-bottom" @onclick="() => AddToCart(product)">
                                             <div class="d-flex align-items-center">
                                                 <div class="bg-light rounded p-2 me-3">
                                                     <i class="fa-solid fa-barcode text-primary"></i>
                                                 </div>
                                                 <div>
                                                     <div class="fw-bold text-dark">@product.Name</div>
                                                     <div class="text-muted tiny">Code: @product.Barcode | Stock: <span class="fw-bold @(product.StockQuantity < 5 ? "text-danger" : "text-success")">@product.StockQuantity</span></div>
                                                 </div>
                                             </div>
                                             <div class="text-end">
                                                 <div class="fw-bold text-primary h5 mb-0">@product.SalePrice.ToString("C")</div>
                                                 <div class="tiny text-muted uppercase fw-bold">Click to Add</div>
                                             </div>
                                         </div>
                                     }
                                 </div>
                             }
                        </div>
                    </div>

                    <!-- Cart Content -->
                    <div class="flex-grow-1 overflow-auto p-0">
                        @if (cartItems.Any())
                        {
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light sticky-top">
                                    <tr>
                                        <th class="px-4 py-3 tiny fw-bold text-uppercase text-muted border-0">Product Info</th>
                                        <th class="px-4 py-3 tiny fw-bold text-uppercase text-muted border-0 text-center" style="width: 150px;">Quantity</th>
                                        <th class="px-4 py-3 tiny fw-bold text-uppercase text-muted border-0 text-end" style="width: 150px;">Unit Price</th>
                                        <th class="px-4 py-3 tiny fw-bold text-uppercase text-muted border-0 text-end" style="width: 150px;">Total</th>
                                        <th class="px-4 py-3 border-0" style="width: 60px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in cartItems)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="fw-bold text-dark">@item.Product.Name</div>
                                                <div class="text-muted tiny">@item.Product.Barcode</div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <button class="btn btn-sm btn-light border" @onclick="() => { if(item.Quantity > 1) { item.Quantity--; UpdateCartTotal(); } }"><i class="fa-solid fa-minus tiny"></i></button>
                                                    <div class="mx-2 fw-bold" style="width: 30px; text-align: center;">@item.Quantity</div>
                                                    <button class="btn btn-sm btn-light border" @onclick="() => { if(item.Quantity < item.Product.StockQuantity) { item.Quantity++; UpdateCartTotal(); } }"><i class="fa-solid fa-plus tiny"></i></button>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-end fw-semibold">@item.Product.SalePrice.ToString("C")</td>
                                            <td class="px-4 py-3 text-end fw-bold text-primary">@((item.Quantity * item.Product.SalePrice).ToString("C"))</td>
                                            <td class="px-4 py-3 text-end">
                                                <button class="btn btn-link text-danger p-0" title="Remove" @onclick="() => RemoveFromCart(item)">
                                                    <i class="fa-solid fa-trash-can"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="h-100 d-flex flex-column align-items-center justify-content-center text-center p-5 opacity-50">
                                <div class="bg-light rounded-circle p-4 mb-3">
                                    <i class="fa-solid fa-cart-shopping fa-3x text-muted"></i>
                                </div>
                                <h4 class="fw-bold">Your cart is empty</h4>
                                <p class="text-muted">Start by scanning a barcode or searching for products</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right: Order Payment and Summary -->
            <div class="col-lg-4 h-100 overflow-hidden d-flex flex-column">
                <div class="premium-card h-100 d-flex flex-column overflow-hidden">
                    <div class="card-header bg-white border-bottom p-4">
                        <h5 class="fw-bold mb-0"><i class="fa-solid fa-receipt me-2 text-primary"></i>Order Summary</h5>
                    </div>
                    
                    <div class="flex-grow-1 overflow-auto p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted fw-bold tiny text-uppercase">Subtotal</span>
                            <span class="fw-semibold">@subtotal.ToString("C")</span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted fw-bold tiny text-uppercase">Discount (%)</span>
                                <div class="input-group input-group-sm" style="width: 100px;">
                                    <input type="number" class="form-control text-center fw-bold" 
                                           @bind="discountPercentage" 
                                           @bind:event="oninput"
                                           @onchange="UpdateCartTotal"
                                           min="0" max="100" />
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted tiny">Discount Value</span>
                                <span class="text-danger fw-semibold">-@discountAmount.ToString("C")</span>
                            </div>
                        </div>

                        <div class="border-top pt-3 mb-4">
                            <label class="form-label tiny fw-bold text-uppercase text-muted">Payment Method</label>
                            <div class="row g-2">
                                @foreach (var mode in paymentModes)
                                {
                                    <div class="col-6">
                                        <div class="payment-opt-box @(selectedPaymentMode == mode ? "active" : "")" @onclick="() => selectedPaymentMode = mode">
                                            <i class="fa-solid @(GetPaymentIcon(mode)) mb-1"></i>
                                            <span class="tiny fw-bold">@mode</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Total Bottom Area -->
                    <div class="p-4 bg-light border-top flex-shrink-0 mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="h5 fw-bold mb-0">Payable Total</span>
                            <span class="h3 fw-bold mb-0 text-primary">@totalAmount.ToString("C")</span>
                        </div>

                        <button class="btn btn-primary w-100 py-3 fw-bold shadow-sm mb-2" 
                                disabled="@(!cartItems.Any())"
                                @onclick="CompleteSale">
                            <i class="fa-solid fa-circle-check me-2"></i> COMPLETE SALE
                        </button>
                        
                        <button class="btn btn-outline-secondary w-100 py-2 fw-bold" 
                                disabled="@(!cartItems.Any())"
                                @onclick="ClearCart">
                            <i class="fa-solid fa-trash-can me-2"></i> CLEAR CART
                        </button>

                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert @messageClass mt-3 mb-0 tiny py-2 fw-bold">
                                <i class="fa-solid @(messageClass.Contains("success") ? "fa-check-circle" : "fa-triangle-exclamation") me-2"></i> @message
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .search-icon-pos {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        font-size: 1.2rem;
    }

    .search-results-overlay {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        margin-top: 10px;
        max-height: 400px;
        overflow-y: auto;
    }

    .search-result-item {
        cursor: pointer;
        transition: background 0.2s;
        background: var(--bg-card);
    }

    .search-result-item:hover {
        background: var(--bg-light);
    }

    .payment-opt-box {
        border: 2px solid var(--border-color);
        border-radius: 12px;
        padding: 15px 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        flex-direction: column;
        align-items: center;
        background: var(--bg-card);
        color: var(--text-muted);
    }

    .payment-opt-box:hover {
        border-color: var(--text-muted);
        background: var(--bg-light);
    }

    .payment-opt-box.active {
        border-color: var(--primary-color);
        background: rgba(67, 94, 190, 0.1);
        color: var(--primary-color);
    }

    .payment-opt-box i {
        font-size: 1.25rem;
    }

    .table thead th {
        backdrop-filter: blur(8px);
        background-color: var(--grid-header) !important;
        color: var(--text-muted) !important;
    }
    
    .table td {
        color: var(--text-main);
        border-color: var(--grid-border);
    }

</style>

@code {
    private string searchTerm = string.Empty;
    private List<Product> searchResults = new List<Product>();
    private List<CartItem> cartItems = new List<CartItem>();
    private decimal subtotal = 0;
    private decimal discountPercentage = 0;
    private decimal discountAmount = 0;
    private decimal totalAmount = 0;
    private string selectedPaymentMode = "Cash";
    private List<string> paymentModes = new List<string> { "Cash", "Card", "UPI", "Bank Transfer" };
    private string message = string.Empty;
    private string messageClass = string.Empty;

    protected override void OnInitialized()
    {
        if (LoginManager.CurrentUser == null)
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task SearchProducts()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            searchResults.Clear();
            return;
        }
        searchResults = await POSController.SearchProductsAsync(searchTerm);
    }

    private string GetPaymentIcon(string mode)
    {
        return mode switch
        {
            "Cash" => "fa-money-bill-1",
            "Card" => "fa-credit-card",
            "UPI" => "fa-mobile-screen-button",
            "Bank Transfer" => "fa-building-columns",
            _ => "fa-wallet"
        };
    }

    private void AddToCart(Product product)
    {
        var existingItem = cartItems.FirstOrDefault(c => c.Product.Id == product.Id);
        if (existingItem != null)
        {
            if (existingItem.Quantity < product.StockQuantity)
                existingItem.Quantity++;
        }
        else
        {
            cartItems.Add(new CartItem { Product = product, Quantity = 1 });
        }

        searchTerm = string.Empty;
        searchResults.Clear();
        UpdateCartTotal();
    }

    private void RemoveFromCart(CartItem item)
    {
        cartItems.Remove(item);
        UpdateCartTotal();
    }

    private void UpdateCartTotal()
    {
        var cartDtos = cartItems.Select(c => new CartItemDto
        {
            ProductId = c.Product.Id,
            Quantity = c.Quantity,
            UnitPrice = c.Product.SalePrice
        }).ToList();

        var calculation = POSController.CalculateCart(cartDtos, discountPercentage);
        
        subtotal = calculation.Subtotal;
        discountAmount = calculation.DiscountAmount;
        totalAmount = calculation.TotalAmount;
        StateHasChanged();
    }

    private async Task CompleteSale()
    {
        if (!cartItems.Any())
        {
            message = "Cart is empty!";
            messageClass = "alert-warning";
            return;
        }

        var cartDtos = cartItems.Select(c => new CartItemDto
        {
            ProductId = c.Product.Id,
            Quantity = c.Quantity,
            UnitPrice = c.Product.SalePrice
        }).ToList();

        var (success, invoiceNumber, error) = await POSController.CompleteSaleAsync(
            customerId: 1, 
            userId: LoginManager.CurrentUser!.Id,
            cartItems: cartDtos,
            discountPercentage: discountPercentage,
            paymentMode: selectedPaymentMode
        );

        if (success)
        {
            message = $"Sale completed! Invoice: {invoiceNumber}";
            messageClass = "alert-success";
            ClearCart();
        }
        else
        {
            message = error;
            messageClass = "alert-danger";
        }
    }

    private void ClearCart()
    {
        cartItems.Clear();
        UpdateCartTotal();
    }

    public class CartItem
    {
        public Product Product { get; set; } = null!;
        public int Quantity { get; set; }
    }
}
